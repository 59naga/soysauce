{
  "name": "soysauce",
  "description": "Pretty SauceLabs browser matrix widget",
  "version": "0.1.0-alpha.1",

  "bin": "soysauce",
  "files": [
    "soysauce",
    "index.js",
    "lib",
    "themes"
  ],

  "config": {
    "ghooks": {
      "pre-commit": "npm run cover"
    }
  },
  "scripts": {
    "default": "jasminetea test --verbose --timeout 5000",
    "cover": "$(opc package scripts.default) --cover --report",

    "Developer commands": "",
      "start": "$(opc package scripts.cover) --watch",

    "Travis-CI commands": "",
      "test": "npm run cover",

    "Npm update via Travis-CI": "",
      "prepublish": "if [ $TRAVIS_BUILD_PASSED ]; then npm run compile; fi",
      
      "compile": "coffee --bare --compile index.coffee",
      "postcompile": "coffee --output lib --bare --compile src"
  },
  
  "dependencies": {
    "bluebird": "^2.9.25",
    "cheerio": "^0.19.0",
    "commander-file": "0.0.1",
    "express": "^4.12.3",
    "js-beautify": "^1.5.5",
    "request": "^2.55.0",
    "yamljs": "^0.2.2"
  },
  "devDependencies": {
    "coffee-script": "^1.9.2",
    "ghooks": "^0.3.2",
    "jasminetea": "^0.2.0-beta.1",
    "lodash": "^3.8.0",
    "object-parser-cli": "0.0.0"
  },

  "keywords": [
    "saucelabs",
    "widget",
    "badge",
    "express",
    "zuul"
  ],
  "author": "59naga <i59naga@icloud.com> (http://berabou.me)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/59naga/soysauce.git"
  },
  "bugs": {
    "url": "https://github.com/59naga/soysauce/issues"
  },
  "homepage": "https://github.com/59naga/soysauce#readme"
}
